		<extension point="portsensor.fields.source">
			<id>portsensor.fields.source.sensor</id>
			<name>Sensor</name>
			<class>
				<file>api/plugin.classes.php</file>
				<name>PsCustomFieldSource_Sensor</name>
			</class>
			<params/>
		</extension>
		
		<extension point="portsensor.fields.source">
			<id>portsensor.fields.source.worker</id>
