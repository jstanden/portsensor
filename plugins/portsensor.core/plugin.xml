			<class>
				<file>api/plugin.classes.php</file>
				<name>PsCustomFieldSource_Worker</name>
			</class>
			<params/>
		</extension>
				
		<!-- Workspace Sources -->
		
		<!--
		<extension point="cerberusweb.workspace.source">
			<id>core.workspace.source.address</id>
			<name>Addresses</name>
			<class>
				<file>api/plugin.classes.php</file>
				<name>ChWorkspaceSource_Address</name>
			</class>
			<params>
